{
  "name": "stream-privacy",
  "displayName": "Streamer Mode - Hide secrets while on stream",
  "description": "Blur or hide secrets (.env, API keys, tokens) during streaming, screen sharing, or live demos â€” masks values only and supports common API keys/secrets, JWTs, URIs, and more.",
  "version": "0.0.1",
  "publisher": "elliotpadfield",
  "repository": {
    "type": "git",
    "url": "https://github.com/ElliotPadfield/streamer-mode-vscode.git"
  },
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#0A0F1A",
    "theme": "dark"
  },
  "homepage": "https://github.com/ElliotPadfield/streamer-mode-vscode",
  "bugs": {
    "url": "https://github.com/ElliotPadfield/streamer-mode-vscode/issues"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "streamer mode",
    "stream",
    "screen share",
    "privacy",
    "mask",
    "redact",
    "blur",
    "obfuscate",
    "secrets",
    "api keys",
    "tokens",
    "env",
    ".env",
    "security",
    "live coding",
    "presentation",
    "demo",
    "jwt"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "streamPrivacy.toggle",
        "title": "Streamer Mode: Toggle"
      },
      {
        "command": "streamPrivacy.statusActions",
        "title": "Streamer Mode: Status Actions"
      },
      {
        "command": "streamPrivacy.cycleStyle",
        "title": "Streamer Mode: Cycle Obfuscation Style"
      },
      {
        "command": "streamPrivacy.copyRedacted",
        "title": "Streamer Mode: Copy Redacted"
      },
      {
        "command": "streamPrivacy.openSensitiveFileAnyway",
        "title": "Streamer Mode: Open Sensitive File Anyway"
      }
    ],
    "configuration": {
      "title": "Streamer Mode",
      "properties": {
        "streamPrivacy.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable Streamer Mode masking and protections."
        },
        "streamPrivacy.obfuscationStyle": {
          "type": "string",
          "enum": [
            "dots",
            "block",
            "blur"
          ],
          "default": "blur",
          "description": "How to render masked text in the editor."
        },
        "streamPrivacy.patterns": {
          "type": "array",
          "default": [],
          "description": "Custom patterns to mask. Each item supports { name, regex, group? }. Built-in presets controlled by streamPrivacy.extraPresets."
        },
        "streamPrivacy.dangerousFiles": {
          "type": "array",
          "default": [
            "**/.env*",
            "**/secrets.*",
            "**/*.pem",
            "**/*.key",
            "**/config/*.yml"
          ],
          "description": "Glob patterns of files to guard while enabled."
        },
        "streamPrivacy.maskWindowTitle": {
          "type": "boolean",
          "default": true,
          "description": "When enabled, simplify the window title to hide workspace names."
        },
        "streamPrivacy.extraPresets": {
          "type": "boolean",
          "default": true,
          "description": "Enable extra built-in secret detection presets (env/config values, provider tokens, URIs)."
        },
        "streamPrivacy.windowTitleMaskedValue": {
          "type": "string",
          "default": "${appName}",
          "description": "Title format used when masked (uses the same variables as VS Code window.title)."
        }
      }
    },
    "keybindings": [
      {
        "command": "streamPrivacy.copyRedacted",
        "key": "cmd+c",
        "when": "streamPrivacyActive && editorTextFocus && isMac"
      },
      {
        "command": "streamPrivacy.copyRedacted",
        "key": "ctrl+c",
        "when": "streamPrivacyActive && editorTextFocus && !isMac"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.4.0"
  }
}
